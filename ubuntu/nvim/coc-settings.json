{
    "coc.preferences.willSaveHandlerTimeout": 2000,
    "coc.preferences.formatOnSave": false,
    "coc.preferences.formatOnType": false,
    "coc.preferences.extensionUpdateCheck": "daily",
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    },
    "rust-analyzer.updates.checkOnStartup": true,
    "rust-analyzer.lruCapacity": 100,
    "rust-analyzer.lens.methodReferences": true,
    "rust-analyzer.cargo.features": ["virtiofs"],
    "rust-analyzer.check.features": ["virtiofs"],
    "diagnostic.errorSign": "âœ˜",
    "diagnostic.infoSign": "i",
    "python.analysis.extraPaths": [
        "framework"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "120"
    ],
    "clangd.checkUpdates": true
}
